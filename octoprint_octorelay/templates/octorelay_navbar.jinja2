<script type="application/javascript">
    function OctoRelayConfirmClick(pin, confirmOff)
    {
        console.log("confirmOff "+ confirmOff);
        if(confirmOff === "true"){
            var result = window.confirm("Are you sure?");
            if (result) {
                OctoPrint.simpleApiCommand("octorelay", "update", pin);
            }
        } else {
            OctoPrint.simpleApiCommand("octorelay", "update", pin);
        }
    }
</script>
{% for n in range(1,9) %}
    <div id="relaisr{{n}}" style="float: left; padding: 8px; font-size: 1.3em; {% if n > 4 %} display:none; {% endif %}">
        <a id="ralayIconr{{n}}" onclick='OctoRelayConfirmClick({"pin":"r{{n}}"}, this.getAttribute("data-confirm"))' data-confirm="False" title="relay {{n}}" style="text-decoration:none; cursor:pointer;">
            R{{n}}
        </a>
    </div>
{% endfor %}

